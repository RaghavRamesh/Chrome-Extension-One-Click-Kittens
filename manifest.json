{
	"manifest_version": 2,

	"name": "one-click Kittens",
	"description": "This extension demonstrates a broswer action with kittens.",
	"version": "1.0",

	"icons": {
		"16": "img/icon.png"
	},

	"permissions": [
		"https://secure.flickr.com/",
		"contextMenus"
	],

	"browser_action": {
		"default_title": "Images from flickr",
		"default_icon": "img/icon.png",
		"default_popup": "pages/popup.html"
	},

	"background": {
		"scripts": [
			"js/popup.js",
			"js/tester.js"
		]
	}
}	